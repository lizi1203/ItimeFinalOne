<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeAllActivity">

    <Button
        android:id="@+id/button_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:text="⬅"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:text="✗"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/button_share"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:text="↗"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/button_update"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:text="✏"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_new" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <ImageView
            android:id="@+id/calendar_image_view2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            app:srcCompat="@drawable/calendar_icon" />

        <TextView
            android:id="@+id/title_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"

            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/description_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TextView"
            android:layout_marginLeft="60dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:id="@+id/data_text_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TextView"
            android:layout_marginLeft="60dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/count_image_View"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/count_icon" />

        <TextView
            android:id="@+id/count_text_view"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TextView"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"

        android:layout_height="60dp"

        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/notification_icon" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/notification_text_view"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Notification"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/show_icon" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/show_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:text="Show in calendar"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout6">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/shortcut_icon" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/shortcut_text_view"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:text="IconShortcut"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/available_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Available In Android 7.1.1"
            android:layout_marginLeft="60dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
        app:layout_constraintTop_toTopOf="@+id/frameLayout2"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/colorGray">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>